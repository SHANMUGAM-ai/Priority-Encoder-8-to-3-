module tb_priority_encoder;
    reg [7:0] in;
    wire [2:0] out;
    wire valid;

    priority_encoder uut(.in(in), .out(out), .valid(valid));

    initial begin
        $dumpfile("priority_encoder.vcd"); $dumpvars(0, tb_priority_encoder);
        in = 8'b00000001; #10;
        in = 8'b00000100; #10;
        in = 8'b10000000; #10;
        in = 8'b00000000; #10;
        $finish;
    end
endmodule
